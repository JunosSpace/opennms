<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:opennms="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


	<!-- Modify the type of filter field in filterfavorites to 'text'. So that user can save filters with more than 255 characters -->
	<changeSet author="surendran" id="17.1_Update_filter_field">
        <modifyDataType tableName="filterfavorites" columnName="filter" newDataType="text" />
        <rollback>
	  <modifyDataType tableName="filterfavorites" columnName="filter" newDataType="varchar(255)" />
        </rollback>
    </changeSet>

  
</databaseChangeLog>


